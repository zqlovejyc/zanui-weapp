/*tip wxss*/
.zan-tip-mask {  
  display: none;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index:1200;
}
.zan-tip {
  max-width: 80%;
  padding:.7rem;
  background:rgba(0,0,0,.7);
  color:#fff;  
  border-radius:5px;
  font-size:1rem;
  text-align: left;
  margin-top:-20%;
}
.flex {
  display: flex;
}
/*scaleIn*/
@keyframes scaleIn {
  0% {
    transform: scale(1.2);
    opacity: 0;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}
.scaleIn {
  animation: scaleIn .3s ease forwards;
}
/*scaleOut*/
@keyframes scaleOut {
  0% {
    transform: scale(1);    
  }
  100% {
    transform: scale(.5);
    opacity: 0;
  }
}
.scaleOut {
  animation: scaleOut .3s ease forwards;
}
/*shake*/
@keyframes shake {
  0%,
  100% {
    transform: translate(0, 0);
  }
  10%,
  30%,
  50%,
  70%,
  90% {
    transform: translate(-10px, 0);
  }
  20%,
  40%,
  60%,
  80% {
    transform: translate(10px, 0);
  }
}
.shake {
  animation: shake .4s ease both;
}