@import '../loadmore/index.wxss';

.hidden{
    visibility:hidden;
}
.pull-to-refresh{
    text-align: center;
    padding: 1rem;  
}
.pull-to-refresh>view{
    display: inline-block;
    vertical-align: middle;
    color: #707070;
    font-size: 14px;
}
.pull-to-refresh-down{
    width:1.2rem;
    height: 1.2rem;
    background-image: url("data:image/svg+xml;base64,");
    background-size: 100%;
    transition-duration: .5s;    
}
.pull-to-refresh-up{
    transform: rotate(180deg);
    transition-duration: .5s;
}
.refreshCss,.loadingCss{
    margin:40rpx auto;
}