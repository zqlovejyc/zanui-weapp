/*topTip wxss*/
.zan-success,
.zan-error,
.zan-warn,
.zan-info {
  position: fixed;
  z-index: 1200;
  margin: 0;
  top:0;
  left: 0;
  right: 0;
  font-size: .9rem;
  color: #fff;
  padding:.4rem 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
}
.zan-success {
  background: rgba(26, 173, 25, .8);
}
.zan-error {
  background: rgba(250, 33, 3, .8);
}
.zan-warn {
  background: rgba(255, 90, 0, .8);
}
.zan-info {
  background: rgba(88, 108, 148, .8);
}
/*slideUp*/
@keyframes slideUp {
    0% {
        transform: translate(0, 0);
        opacity: 1;
    }
    100% {
        transform: translate(0, -100%);
        opacity: 0;
    }
}
.slideUp {
    animation: slideUp .3s ease forwards;
}
/*slideDown*/
@keyframes slideDown {
    0% {
        transform: translate(0, -100%);
        opacity: 0;
    }
    100% {
        transform: translate(0, 0);
        opacity: 1;
    }
}
.slideDown {
    animation: slideDown .3s ease forwards;
}